datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // Variável de ambiente para conexão
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String? // Campo opcional
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
